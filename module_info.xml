<?xml version="1.0" encoding="utf-8"?>
<module>
    
    <version>1.3.4</version>
    <group>modules_misc</group>
    
    <working_flags>
        <install>true</install>
        <uninstall>true</uninstall>
        <enable>true</enable>
        <disable>true</disable>
    </working_flags>
    
    <menu_items>
        <item>
            <caption_language_var>admin_menu_caption</caption_language_var>
            <url></url>
        </item>
    </menu_items>

    <php_includes>
        <document_handler>document_handler.inc</document_handler>
    </php_includes>
    
    <shortcode_handlers>
        <handler name="page_title">
            <syntax>[page_title path="document_path" processed="true|false" include_autolinks="true|false" class="css classes" style="css styles"]</syntax>
            <file>shortcode_handlers/page_title.inc</file>
        </handler>
        <handler name="page_description">
            <syntax>[page_description path="document_path" class="css classes" style="css styles"]</syntax>
            <file>shortcode_handlers/page_excerpt.inc</file>
        </handler>
        <handler name="page_content">
            <syntax>[page_content path="document_path" processed="true|false" class="css classes" style="css styles"]</syntax>
            <file>shortcode_handlers/page_content.inc</file>
        </handler>
    </shortcode_handlers>
    
    <template_includes>
        <html_head priority="910">html_head.inc</html_head>
        <content_top>content_top.inc</content_top>
        <content_bottom>content_bottom.inc</content_bottom>
    </template_includes>
    
</module>
